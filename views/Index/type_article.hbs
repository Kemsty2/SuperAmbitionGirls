<section class="main_news_wrapper_article">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                {{#if articlefirst}}
                    <div class="type_article_box">
                        <p class="text-center">{{type_article}}</p>
                    </div>
                    {{#each articlefirst}}
                        <div class="br_single_news purchase_sidebar_img2" onclick="document.location= '/articles/lecture/{{this._id}}';">
                            <img alt="" src="{{this.photo}}">
                            <div class="purchase_overlay2">
                                <div class="col ov-description">
                                    <div class="row mb-3">
                                        <div class="col-md-12 overlay-type">
                                            <h4 class="text-center"> <strong>{{articlefirst.type}}</strong></h4>
                                            <hr>
                                            <p class="text-center">By {{articlefirst.auteur_nom}} Le {{articlefirst.date_pub}}</p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-12 overlay-description">
                                            <p> {{articlefirst.description}}...</p>
                                            <div class="d-flex justify-content-center">
                                                <a class="btn btn-outline-primary" href="/articles/lecture/{{articlefirst._id}}"> Lire la suite...</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="br_single_text">
                                <span class="blue_hp_span">{{this.type}}</span>
                                <h1 class="dark_hp_span"><a href="/articles/lecture/{{this._id}}">{{this.titre}}</a></h1>
                            </div>
                            <div class="br_cam">
                                <a class="fa fa-camera" href="#"></a>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{#each articles}}
                    <div class="br_single_news mt-5 purchase_sidebar_img2" onclick="document.location= '/articles/lecture/{{this._id}}';">
                        <img alt="" src="{{this.photo}}">
                        <div class="purchase_overlay2">
                            <div class="col ov-description">
                                <div class="row mb-3">
                                    <div class="col-md-12 overlay-type">
                                        <h4 class="text-center"> <strong>{{this.type}}</strong></h4>
                                        <hr>
                                        <p class="text-center">By {{this.auteur_nom}} Le {{this.date_pub}}</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12 overlay-description">
                                        <p> {{this.description}}...</p>
                                        <div class="d-flex justify-content-center">
                                            <a class="btn btn-outline-primary" href="/articles/lecture/{{this._id}}"> Lire la suite...</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="br_single_text">
                            <span class="blue_hp_span">{{this.type}}</span>
                            <h1 class="dark_hp_span"><a href="/articles/lecture/{{this._id}}">{{this.titre}}</a></h1>
                        </div>
                        <div class="br_cam">
                            <a class="fa fa-camera" href="#"></a>
                        </div>
                    </div>
                {{/each}}
                {{#if plus}}
                    <div class="d-flex justify-content-end plus_article">
                        <a type="button" href="/typearticle/{{type_article}}/pagination/{{last._id}}" class="btn btn-primary btn-lg col-md-12 col-sm-12 col-xs-12"><i class="far fa-plus-circle"></i>Plus D'articles...</a>
                    </div>
                {{/if}}
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12">
