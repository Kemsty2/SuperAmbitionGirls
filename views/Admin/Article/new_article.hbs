<div class="panel-header panel-header-sm">
</div>
<h2 class="panel-title text-center" style="margin-top: 1rem;"> Creation Article</h2>
<div class="content" style="margin-top: 1rem;">
    <form action="/articles/enroll_article" method="post" enctype="multipart/form-data" role="form">
        <div class="row">
                <div class="col-md-9">
                    <div class="card" style="padding-bottom: 2rem;">
                            <div class="card-header">
                                <h5 class="title"> Creer Article</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-4 ">
                                    <div class="col-md-11 pr-1 ml-auto mr-auto">
                                        <label>Titre</label>
                                        <input type="text" class="form-control" placeholder="Titre Article" name="titre">
                                    </div>
                                </div>
                                <div class="row mb-4 ml-4">
                                    <div class="col-md-6 pr-1">
                                        <label>Type</label>
                                        <select class="selectpicker" data-size="7" data-style="btn btn-primary btn-round" title="Type Article" name="type">
                                            <option disabled selected>Type Article</option>
                                            <option value="1">SuperAmbitieux</option>
                                            <option value="2">LifeStyle</option>
                                            <option value="3">Edito</option>
                                            <option value="4">Empowering</option>
                                            <option value="5">Love & RelationShip</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 pr-1">
                                        <div class="form-check" style="margin-left: 5rem;">
                                            <label class="form-check-label" style="margin-top: 1.3rem;">
                                                <input class="form-check-input" type="checkbox" value="" id="specialcheck" >
                                                Article Special?
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-11 pr-1 ml-auto mr-auto">
                                        <label>Contenu</label>
                                        <textarea class="form-control" placeholder="Contenu de l'article" name="contenu"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 pr-1">
                                        <h4 class="card-title">Tags</h4>
                                        <input type="text" value="Super Ambitieux, LifeStyle, Empowering, Love & Relationship" name="tags" class="tagsinput" data-role="tagsinput" data-color="danger"/>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="special" id="special" value="">
                            <div class="card-footer row">
                                <button type="submit" onclick="test()" class="btn btn-primary btn-round col-md-3" style="margin-left: 35%;background-color: #DC3151;">Cr√©er</button>
                            </div>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-user">
                        <div class="card-body">
                            <div>
                                <h4 class="card-title text-center">Choisir Photo Article</h4>
                                <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail">
                                        <img src="/assets/img/image_placeholder.jpg" alt="...">
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                    <div>
                                        <span class="btn btn-rose btn-round btn-file">
                                            <span class="fileinput-new">Select image</span>
                                            <span class="fileinput-exists">Change</span>
                                            <input type="file" name="photo" />
                                        </span>
                                        <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </form>
</div>
<script>
    function test () {
        var checkbox = document.getElementById('specialcheck');
        if(checkbox.checked){
            document.getElementById('special').value = 'special';
        }
    }
</script>