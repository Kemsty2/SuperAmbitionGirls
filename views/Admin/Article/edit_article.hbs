<style>
    textarea{
        width: 700px;
        height: 700px !important;
    }
</style>

<div class="panel-header panel-header-sm">
</div>
<h2 class="panel-title text-center" style="margin-top: 1rem;"> Creation Article</h2>
<div class="content" style="margin-top: 1rem;">
    <form action="/articles/edit_article" method="post" enctype="multipart/form-data" role="form">
        <div class="row">
            <div class="col-md-9">
                <div class="card" style="padding-bottom: 2rem;">
                    <div class="card-header">
                        <h5 class="title"> Modifier Article</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4 ">
                            <div class="col-md-5 pr-1 ml-auto mr-auto">
                                <label>Titre</label>
                                <input type="text" class="form-control" placeholder="Titre Article" name="titre" value="{{article.titre}}" >
                            </div>
                            <div class="col-md-5 pr-1 ml-auto mr-auto">
                                <label>Nom Auteur</label>
                                <input type="text" class="form-control" placeholder="Nom Auteur" name="auteur" value="{{article.auteur_nom}}">
                            </div>
                        </div>
                        <div class="row mb-4 ml-4">
                            <div class="col-md-6 pr-1">
                                <label>Type</label>
                                <input type="hidden" value="{{type}}" id="typeselect">
                                <select class="selectpicker" data-size="7" id="type" data-style="btn btn-primary btn-round" title="Type Article" name="type" >
                                    <option disabled selected>Type Article</option>
                                    <option value="1">SuperAmbitieux</option>
                                    <option value="2">LifeStyle</option>
                                    <option value="3">Edito</option>
                                    <option value="4">Empowering</option>
                                    <option value="5">Love & Relation</option>
                                </select>
                            </div>
                            <div class="col-md-6 pr-1">
                                <div class="form-check" style="margin-left: 5rem;">
                                    <label class="form-check-label" style="margin-top: 1.3rem;">
                                        <input class="form-check-input" type="checkbox" {{#if article.special}}checked {{/if}} id="specialcheck" >
                                        Article Special?
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-11 pr-1 ml-auto mr-auto ">
                                <h4>Contenu Article : </h4>
                                <div class="col-md-11 pr-1 ml-auto mr-auto" id="editor"></div>
                                <input type="hidden" id="contenu1" value="{{article.contenu}}" name="contenu">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 pr-1">
                                <h4 class="card-title">Tags</h4>
                                <input type="text" value="Super Ambitieux, LifeStyle, Empowering, Love & Relationship" name="tags" class="tagsinput" data-role="tagsinput" data-color="danger"/>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="special" id="special" value="">
                    <input type="hidden" name="article_id" value="{{article._id}}">
                    <div class="card-footer row">
                        <button type="submit" class="btn btn-primary btn-round col-md-3" id="btn-new-article" style="margin-left: 35%;background-color: #DC3151;">Modifier</button>
                    </div>

                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-user">
                    <div class="card-body">
                        <div>
                            <h4 class="card-title text-center">Choisir Photo Article</h4>
                            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                <div class="fileinput-new thumbnail">
                                    <img src="{{article.photo}}" alt="...">
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail">
                                </div>
                                <div>
                                        <span class="btn btn-rose btn-round btn-file">
                                            <span class="fileinput-new">Select image</span>
                                            <span class="fileinput-exists">Change</span>
                                            <input type="file" name="photo" />
                                        </span>
                                    <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header text-center">
                    <h5>Ajouter Photo Pour Le contenu de l'article</h5>
                </div>
                <div class="card-body">
                    <form id="upload-widget" method="post" action="/articles/uploadPhotos" class="dropzone">
                        <div class="fallback">
                            <input name="file" type="file">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

