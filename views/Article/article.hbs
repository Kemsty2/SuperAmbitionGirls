                                </ul>
                            </div>
                        </div>
                        <div class="sp-next-prev">
                            {{#if previous}}
                                <div class="sp-prev">
                                    <a href="/articles/lecture/{{previous._id}}"><i class="fa fa-angle-double-left"></i>Previous post</a>
