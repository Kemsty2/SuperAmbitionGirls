                            </div>
                        </div>
                    </div>
                    <div class="sp_details">
                        <a href="#">{{article.type}}</a>
                        <h1>{{article.titre}}</h1>
                        <div class="post_meta">
                            <ul>
                                <li><a href="#"><i class="fa fa-user"></i>By {{article.auteur_nom}}</a></li>
                                <li><a href="#"><i class="far fa-clock"></i>{{article.duree}} min</a></li>
                                <li><a href="#"><i class="fa fa-comment-o"></i>{{article.nombre_comms}}</a></li>
                            </ul>
                        </div>
                        <div class="post_text">
                            <p id="contenu"></p>
                        </div>
                        <div class="social_tags">
                            <div class="social_tags_left">
                                <p>Tags :</p>
                                <ul>
                                    {{#each article.tags}}
                                        <li><a href="#">{{this}}</a></li>
