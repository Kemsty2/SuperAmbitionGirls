                                        <a href="/articles/lecture/{{previous._id}}">{{previous.titre}}</a>
                                    </div>
                                </div>
                            {{/if}}
                            {{#if next}}
                                <div class="sp-next">
                                    <a href="/articles/lecture/{{next._id}}">Next Posts<i class="fa fa-angle-double-right"></i></a>
                                    <div class="sp-next-post">
                                        <a href="/articles/lecture/{{next._id}}">{{next.titre}}</a>
                                    </div>
                                </div>
                            {{/if}}
